@model IReadOnlyList<TodoListApp.WebApp.Models.TodoList>
@using TodoListApp.WebApp.Models

@{
    ViewData["Title"] = "Lists";

    var total     = (int)(ViewData["Total"] ?? 0);
    var page      = (int)(ViewData["Page"] ?? 1);
    var pageSize  = (int)(ViewData["PageSize"] ?? 10);
    var pages     = Math.Max(1, (int)Math.Ceiling((double)total / Math.Max(1, pageSize)));

    var selId     = ViewData["SelectedId"] as int?;
    var selTitle  = ViewData["SelectedTitle"] as string ?? "";
    var selDesc   = ViewData["SelectedDescription"] as string ?? "";
    var hasSelection = selId.HasValue;

    var taskItems = ViewData["TaskItems"] as IReadOnlyList<TaskItem> ?? Array.Empty<TaskItem>();
    var taskTotal = (int)(ViewData["TaskTotal"] ?? 0);
    var taskPage  = (int)(ViewData["TaskPage"] ?? 1);
    var taskPageSize = (int)(ViewData["TaskPageSize"] ?? 5);
    var taskPages = Math.Max(1, (int)Math.Ceiling((double)taskTotal / Math.Max(1, taskPageSize)));

    bool hasPrevLists = page > 1;
    bool hasNextLists = page < pages;
    bool hasPrevTasks = taskPage > 1;
    bool hasNextTasks = taskPage < taskPages;
}

@section Sidebar {
    <h6>Lists</h6>

    @if (!Model.Any())
    {
        <div class="text-muted small">No lists yet.</div>
    }
    else
    {
        <div class="d-flex flex-column">
            @foreach (var item in Model)
            {
                var isActive = selId == item.Id;
                <div class="list-row">
                    <a class="flex-grow-1 list-item @(isActive ? "active" : "")"
                       asp-action="Index"
                       asp-route-page="@(page)"
                       asp-route-pageSize="@pageSize"
                       asp-route-selectedId="@item.Id"
                       asp-route-selectedTitle="@item.Title"
                       asp-route-selectedDescription="@item.Description"
                       asp-route-taskPage="1"
                       asp-route-taskPageSize="5">
                        <span class="title">@item.Title</span>
                    </a>

                    <div class="dropdown more-wrap ms-1">
                        <button class="btn btn-light btn-sm ellipsis-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="More">
                            &#8942;
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   asp-route-title="@item.Title"
                                   asp-route-description="@item.Description">Edit</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-danger"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   asp-route-title="@item.Title">Delete</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-2 mb-2">
        <a asp-action="Create" class="add-list-btn">
            <span class="plus">+</span>
            <span>Add New List</span>
        </a>
    </div>

    <div class="row-sep"></div>

    <nav class="pager d-flex justify-content-between">
        <a class="btn btn-outline-secondary btn-sm square-btn @(hasPrevLists ? "" : "disabled")"
           asp-action="Index"
           asp-route-page="@(page-1)"
           asp-route-pageSize="@pageSize"
           asp-route-selectedId="@selId"
           asp-route-selectedTitle="@selTitle"
           asp-route-selectedDescription="@selDesc"
           asp-route-taskPage="@taskPage"
           asp-route-taskPageSize="@taskPageSize">Prev</a>

        <span class="align-self-center small">Page @(page) / @pages</span>

        <a class="btn btn-outline-secondary btn-sm square-btn @(hasNextLists ? "" : "disabled")"
           asp-action="Index"
           asp-route-page="@(page+1)"
           asp-route-pageSize="@pageSize"
           asp-route-selectedId="@selId"
           asp-route-selectedTitle="@selTitle"
           asp-route-selectedDescription="@selDesc"
           asp-route-taskPage="@taskPage"
           asp-route-taskPageSize="@taskPageSize">Next</a>
    </nav>
}

@if (hasSelection)
{
    <div class="mt-3 mb-3">
        <a class="add-list-btn" asp-controller="Task" asp-action="Create" asp-route-listId="@selId">
            <span class="plus">+</span>
            <span>Add Task</span>
        </a>
    </div>
    <div class="page-title">
        <h1>@selTitle</h1>
    </div>
    @if (!string.IsNullOrWhiteSpace(selDesc))
    {
        <div class="desc">@selDesc</div>
    }

    <div class="mt-4">
        @if (!taskItems.Any())
        {
            <div class="text-muted">No tasks in this list.</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var t in taskItems)
                {
                    var overdue = ((t.IsOverdue ?? (t.DueDate.HasValue && t.DueDate.Value < DateTime.UtcNow))
                    && t.Status != TodoListApp.WebApp.Models.TaskStatus.Completed);

                    var rowClass = overdue ? "task-overdue" : "";

                    string statusClass = t.Status switch
                    {
                        TodoListApp.WebApp.Models.TaskStatus.NotStarted => "notstarted",
                        TodoListApp.WebApp.Models.TaskStatus.InProgress => "inprogress",
                        TodoListApp.WebApp.Models.TaskStatus.Completed => "completed",
                        _ => ""
                    };

                    <div class="list-group-item d-flex justify-content-between align-items-center @rowClass">
                        <a class="text-decoration-none flex-grow-1 d-flex justify-content-between align-items-center"
                           asp-controller="Task" asp-action="Details" asp-route-id="@t.Id">
                            <div class="text-truncate">
                                <div class="fw-semibold text-dark">@t.Title</div>
                                @if (!string.IsNullOrWhiteSpace(t.Description))
                                {
                                    <div class="small text-muted text-truncate" style="max-width: 60ch;">@t.Description</div>
                                }
                                @if (overdue)
                                {
                                    <div class="small fw-semibold" style="color:#b91c1c;">Overdue</div>
                                }
                            </div>

                            <div class="text-end ms-3">
                                @if (t.DueDate.HasValue)
                                {
                                    <div class="small">@t.DueDate.Value.ToString("yyyy-MM-dd")</div>
                                }
                                @if (t.Status.HasValue)
                                {
                                    <span class="badge badge-status @statusClass">@t.Status.Value</span>
                                }
                            </div>
                        </a>

                        <div class="dropdown ms-2">
                            <button class="btn btn-light btn-sm ellipsis-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="More">
                                &#8942;
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Task" asp-action="Edit"
                                       asp-route-id="@t.Id"
                                       asp-route-listId="@t.TodoListId">Edit</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Task" asp-action="ChangeStatus"
                                       asp-route-id="@t.Id"
                                       asp-route-listId="@t.TodoListId">Change Status</a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Task" asp-action="Delete"
                                       asp-route-id="@t.Id"
                                       asp-route-listId="@t.TodoListId">Delete</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }

            </div>

            <nav class="pager d-flex justify-content-between mt-3">
                <a class="btn btn-outline-secondary btn-sm square-btn @(hasPrevTasks ? "" : "disabled")"
                   asp-action="Index"
                   asp-route-page="@(page)"
                   asp-route-pageSize="@pageSize"
                   asp-route-selectedId="@selId"
                   asp-route-selectedTitle="@selTitle"
                   asp-route-selectedDescription="@selDesc"
                   asp-route-taskPage="@(taskPage-1)"
                   asp-route-taskPageSize="@taskPageSize">Prev</a>

                <span class="align-self-center small">Tasks Page @taskPage / @taskPages</span>

                <a class="btn btn-outline-secondary btn-sm square-btn @(hasNextTasks ? "" : "disabled")"
                   asp-action="Index"
                   asp-route-page="@(page)"
                   asp-route-pageSize="@pageSize"
                   asp-route-selectedId="@selId"
                   asp-route-selectedTitle="@selTitle"
                   asp-route-selectedDescription="@selDesc"
                   asp-route-taskPage="@(taskPage+1)"
                   asp-route-taskPageSize="@taskPageSize">Next</a>
            </nav>
        }
    </div>
}
else
{
    <div class="text-muted">Select a list from the left to see its details.</div>
}
