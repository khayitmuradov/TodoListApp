@model TodoListApp.WebApp.Models.TodoListModel
@{
    ViewData["Title"] = "Delete List";
}

<h3>Delete List</h3>
<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Title</strong>?
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger square-btn">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary square-btn">Cancel</a>
</form>