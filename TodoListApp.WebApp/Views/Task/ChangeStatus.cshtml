@model TodoListApp.WebApp.Models.TaskDetails
@{
    ViewData["Title"] = "Change Status";
    var listId = (int)ViewData["ListId"]!;
    var taskId = (int)ViewData["TaskId"]!;
}

<h3>Change Status</h3>
<div class="mb-2 text-muted">@Model.Title</div>

<form asp-action="ChangeStatus" method="post">
    <input type="hidden" name="id" value="@taskId" />
    <input type="hidden" name="listId" value="@listId" />

    <div class="mb-3">
        <select name="status" class="form-select"
                asp-items="Html.GetEnumSelectList<TodoListApp.WebApp.Models.TaskStatus>()">
        </select>
    </div>

    <button type="submit" class="btn btn-primary square-btn">Update</button>
    <a asp-controller="TodoList" asp-action="Index" asp-route-selectedId="@listId"
       class="btn btn-outline-secondary square-btn">Cancel</a>
</form>
